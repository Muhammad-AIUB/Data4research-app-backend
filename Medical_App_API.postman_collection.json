{
	"info": {
		"_postman_id": "medical-app-api",
		"name": "Medical App API",
		"description": "Complete API collection for Medical Investigation Profile Management System",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    if (response.success && response.data.token) {",
									"        pm.environment.set(\"token\", response.data.token);",
									"        console.log(\"✅ Token saved to environment\");",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"doctor123\",\n  \"email\": \"doctor@example.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": ["{{base_url}}"],
							"path": ["auth", "register"]
						}
					}
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.success && response.data.token) {",
									"        pm.environment.set(\"token\", response.data.token);",
									"        console.log(\"✅ Token saved to environment\");",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"doctor123\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						}
					}
				}
			]
		},
		{
			"name": "Patients",
			"item": [
				{
					"name": "Create Patient",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"patientId\": \"P000001\",\n  \"name\": \"John Doe\",\n  \"age\": 35,\n  \"sex\": \"Male\",\n  \"patientMobile\": \"01712345678\",\n  \"ethnicity\": \"Bengali\",\n  \"religion\": \"Islam\",\n  \"nidNumber\": \"1234567890123\",\n  \"spouseMobile\": \"01712345679\",\n  \"relativeMobile\": \"01712345680\",\n  \"address\": \"123 Main Street, Dhaka\",\n  \"district\": \"Dhaka\",\n  \"shortHistory\": \"Patient complains of headache for 3 days\",\n  \"surgicalHistory\": \"Appendectomy in 2010\",\n  \"familyHistory\": \"Father had diabetes\",\n  \"pastIllness\": \"Hypertension\",\n  \"tags\": [\"urgent\", \"follow-up\"],\n  \"specialNotes\": \"Patient is allergic to penicillin\",\n  \"finalDiagnosis\": \"Migraine\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/patients",
							"host": ["{{base_url}}"],
							"path": ["patients"]
						}
					}
				},
				{
					"name": "List Patients",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/patients?page=1&limit=10",
							"host": ["{{base_url}}"],
							"path": ["patients"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "10"
								}
							]
						}
					}
				},
				{
					"name": "Search Patients",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/patients/search?query=john&page=1&limit=10",
							"host": ["{{base_url}}"],
							"path": ["patients", "search"],
							"query": [
								{
									"key": "query",
									"value": "john"
								},
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "10"
								}
							]
						}
					}
				},
				{
					"name": "Get Patient by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/patients/:id",
							"host": ["{{base_url}}"],
							"path": ["patients", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "patient-uuid-here"
								}
							]
						}
					}
				},
				{
					"name": "Update Patient",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"John Doe Updated\",\n  \"age\": 36,\n  \"patientMobile\": \"01712345678\",\n  \"finalDiagnosis\": \"Updated diagnosis\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/patients/:id",
							"host": ["{{base_url}}"],
							"path": ["patients", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "patient-uuid-here"
								}
							]
						}
					}
				},
				{
					"name": "Delete Patient",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/patients/:id",
							"host": ["{{base_url}}"],
							"path": ["patients", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "patient-uuid-here"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:3000/health",
					"protocol": "http",
					"host": ["localhost"],
					"port": "3000",
					"path": ["health"]
				}
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000/api/v1"
		},
		{
			"key": "token",
			"value": ""
		}
	]
}

